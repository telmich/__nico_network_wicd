os=$(cat $__global/explorer/os)

case $os in
    archlinux)
        :
    ;;
    *)
        echo "Unsupported OS: $os" >&2
        exit 1
    ;;
esac


for pkg in wicd wicd-gtk; do
   __package $pkg --state present
done

__start_on_boot wicd
